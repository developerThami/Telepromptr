<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scriptScrollView"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".ui.PlayScriptFragment">

        <TextView
            android:id="@+id/scriptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20dp"
            android:background="@color/colorPrimary"
            android:gravity="start"
            android:clickable="true"
            android:contentDescription="@string/script_actual_cd"
            android:textColor="@color/white"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/TextPrimary"
            android:focusable="true" />

    </ScrollView>

    <include layout="@layout/speed_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

